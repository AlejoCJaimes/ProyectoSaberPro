<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/dd6e23837f.js" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="navbar navbar-default-docente navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Docente", "Index", "Docente", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Prueba", "Index", "Prueba")</li>
                    <li>@Html.ActionLink("Competencia", "Index", "Competencia")</li>
                    <li>@Html.ActionLink("Enunciado", "Index", "Enunciado")</li>
                    <li>@Html.ActionLink("Pregunta", "Index", "Pregunta")</li>
                    <li>@Html.ActionLink("Opcion", "Index", "Opcion")</li>
                    <li>@Html.ActionLink("Prueba-Pregunta", "Index", "PruebaPregunta")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    @Styles.Render("~/Content/themes/base/css")
    
</body>
</html>

@model IEnumerable<ProyectoSaberPro.Models.Enunciado>

@{
    ViewBag.Title = "Enunciado";
    //Layout = "~/Views/Shared/_LayoutDocente.cshtml";
    Layout = "~/Views/Shared/LayoutDocente/_headerDocente.cshtml";

}

<h2><a href="@Url.Action("Create","Enunciado",null)" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Enunciado</a></h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TItulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>
   
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TItulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a href="@Url.Action("Details","Enunciado",new { id = item.Id })" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Detalles</a>
                <a href="@Url.Action("Edit","Enunciado",new { id = item.Id })" class="btn btn-warning btn-sm"><i class="fas fa-pen"></i> Editar</a>
                <a href="@Url.Action("Delete","Enunciado",new { id = item.Id })" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</a>
            </td>
        </tr>
    }

</table>
